<% if !wm.nil? %>
    <div class="w-25 mx-auto">
        <table class="table table-hover">
            <thead class="table-primary">
                <tr class="text-primary">
                    <th>&sigma;</th>
                    <th>l<sub>&sigma;</sub>(g)</th>
                </tr>
            </thead>
            <tbody>
                <% wm.each do |wm_sigma| %>
                    <% if wm_sigma[:isInvalid] %>
                        <tr class="table-danger">
                            <td>g is not in the group</td>
                            <td>
                                &Sigma; m<sub>i</sub> = <%= wm_sigma[:m_tot] %><br/>
                                &Sigma; l<sub>i</sub> = <%= wm_sigma[:l_tot] %>
                            </td>
                        </tr>
                        <% else %>
                            <% wm_sigma[:sigma].each do |wm_sigma_i| %>
                                <% if wm_sigma[:isMin] %>
                                    <tr class="table-success">
                                <% else %>
                                    <tr>
                                <% end %>
                                <td><%= wm_sigma_i %></td>
                                <td><%= wm_sigma[:length] %></td>
                            <% end %>
                        </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>